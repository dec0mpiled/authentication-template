<div class="container">
  {{#unless user}}
  <!-- no user -->
  <br>
  <div class="jumbotron">
    <h1>{{title}}</h1>
    <a class="btn btn-primary btn-lg" href="/auth/login">login</a>
    <a class="btn btn-default btn-lg" href="/auth/register">register</a>
  </div>
  {{else}}
  <!-- user -->
  <p>Hey, {{user.username}}</p>

  <a href="/auth/logout">logout</a>
  {{/unless}}
</div>
